<select<?=$this->getAttributesString()?>>
	<? foreach ($this->getOptions() as $key => $value): ?>
		<option value="<?=$key?>"><?=$value?></option>
	<? endforeach; ?>
</select>

<script>
	$(function(){
		$('#<?=$this->getId()?>').change(function(e){
			var values = $('#<?=$this->getListId()?>-filters').serializeObject();
			
			$('#<?=$this->getListId()?>').waxrepeater('refresh', {
				page: 1,
				filters : values
			});
		})
	})
</script>